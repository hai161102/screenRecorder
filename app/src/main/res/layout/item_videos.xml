<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingStart="@dimen/_16sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_16sdp"
    android:paddingBottom="@dimen/_10sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imv_video"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_duration_video"
        android:paddingStart="@dimen/_6sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@id/imv_video"
        app:layout_constraintEnd_toEndOf="@id/imv_video"
        app:layout_constraintStart_toStartOf="@id/imv_video"
        tools:text="00:20" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imv_more"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_item" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textColor="@color/color_11111"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintEnd_toStartOf="@id/imv_more"
        app:layout_constraintStart_toEndOf="@id/imv_video"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Recording.mp4" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_resolution"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textColor="@color/color_8A000000"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toTopOf="@id/tv_size"
        app:layout_constraintEnd_toStartOf="@id/imv_more"
        app:layout_constraintStart_toEndOf="@id/imv_video"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        tools:text="1920x1080" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:textColor="@color/color_8A000000"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imv_more"
        app:layout_constraintStart_toEndOf="@id/imv_video"
        tools:text="3.2MB" />
</androidx.constraintlayout.widget.ConstraintLayout>
