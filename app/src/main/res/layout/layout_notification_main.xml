<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_notification_main"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp">

        <RelativeLayout
            
            android:id="@+id/noti_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imv_record"
                android:padding="@dimen/_2sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_record"
                android:tint="@color/color_FF000E" />

            <TextView
                android:id="@+id/tv_record"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv_record"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/record"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            
            android:id="@+id/noti_screen_shot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imv_capture"
                android:padding="@dimen/_2sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_camera"
                android:tint="@color/color_accent" />

            <TextView
                android:id="@+id/tv_screenshot"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv_capture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/screenshots"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            
            android:id="@+id/noti_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imv_home"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_home_app"
                android:tint="@color/color_accent" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv_home"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/home"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            
            android:id="@+id/noti_tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/imv_cc"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/ic_tools_app"
                android:tint="@color/color_accent" />

            <TextView
                android:id="@+id/tv_tools"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_3sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imv_cc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/tools"
                android:textColor="@color/color_828282"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/color_c4c4c4"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            
            android:id="@+id/noti_exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="@string/close"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
