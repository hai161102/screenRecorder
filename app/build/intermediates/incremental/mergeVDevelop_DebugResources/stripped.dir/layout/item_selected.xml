<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rd_select"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:button="@drawable/button_selected_item"
        android:clickable="false"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/rd_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rd_select"
        app:layout_constraintTop_toTopOf="@id/rd_select">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="@dimen/_8sdp"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_11111"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@id/rd_select"
            app:layout_constraintStart_toEndOf="@id/rd_select"
            app:layout_constraintTop_toTopOf="@id/rd_select" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textSize="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/rd_select"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />
    </LinearLayout>

</LinearLayout>
